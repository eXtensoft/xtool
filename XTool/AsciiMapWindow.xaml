<Window x:Class="XTool.AsciiMapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AsciiMapWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions> 
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Read" Grid.Row="0" Grid.Column="0" Click="Button_Read"/>
        <Button Content="Write" Grid.Row="0" Grid.Column="2" Click="Button_Write"/>
        <DataGrid x:Name="dgrItems" Grid.Row="1" Grid.ColumnSpan="2"/>
        
    </Grid>
</Window>
